<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logDir" value="logs/"/>
    <property name="appName" value="vismaagent"/>

    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/${appName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/${appName}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%thread] %-5level %logger{35} %X{breadcrumbId} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="inoutfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/${appName}-inOut.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>${logDir}/${appName}-inOut-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%thread] %-5level %logger{35} %X{breadcrumbId} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%thread] %-5level %logger{35} %X{breadcrumbId} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.amazonaws.latency" level="WARN"/>
    <logger name="com.amazonaws.metrics.internal.cloudwatch.PredefinedMetricTransformer" level="ERROR"/>

    <logger name="no.embriq.quant.flow.vismaagent.common.InOutLog" additivity="false">
         <appender-ref ref="inoutfile"/>
    </logger>

    <logger name="no.embriq" level="INFO" />

    <root level="INFO">
        <appender-ref ref="logfile"/>
    </root>
</configuration>
